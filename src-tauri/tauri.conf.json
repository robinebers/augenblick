{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Augenblick",
  "version": "0.1.6",
  "identifier": "com.sunstory.augenblick",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Augenblick",
        "width": 800,
        "height": 600,
        "dragDropEnabled": false,
        "hiddenTitle": true,
        "titleBarStyle": "Overlay"
      }
    ],
    "security": {
      "csp": "default-src 'self' asset:; img-src 'self' asset: data: blob: https:; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; connect-src 'self' ipc: http://ipc.localhost https://ipc.localhost http://localhost:1420 ws://localhost:1420; font-src 'self' data:; object-src 'none'; base-uri 'none';"
    }
  },
  "bundle": {
    "active": true,
    "category": "Utility",
    "createUpdaterArtifacts": true,
    "targets": "all",
    "resources": ["icons/tray-icon.png"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IERGRUIzNEJGRDBCRDkxMDMKUldRRGtiM1F2elRyMzVVd0N3M0U3bEg2ZlRYSXJDa2xWNFRTRDd2c24zbXFOZkhtWmhmYVI5YWgK",
      "endpoints": ["https://github.com/robinebers/augenblick/releases/latest/download/latest.json"]
    }
  }
}
